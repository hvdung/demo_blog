<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "All post", posts_path %></li>
        <% if !logged_in? %>
        <li><%= link_to "Sign up", signup_path %></li>
        <% end %>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
      <li>
        <%= form_tag(posts_path, method: :get, class: "navbar-form navbar-left") do %>
          <div class="form-group">
          <%= text_field_tag :title, params[:title], class: "form-control txt-search", placeholder: "Search post..." %>
          </div>
          <%= submit_tag 'Search', name: nil, class: "btn btn-default btn-search" %>
        <% end %>
      </li>
    </nav>
  </div>
</header>