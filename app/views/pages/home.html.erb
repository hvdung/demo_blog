<% provide(:title, "Home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/post_form' %>
      </section>
    </aside>
        <div class="col-md-8">
      <h3>Post Detail</h3>
      <ol class="microposts">
      <%= render 'posts/post' %>
      </ol>
      <%= will_paginate @posts %>
    </div>

  </div>
<% else %>

    <div class="center jumbotron">
    <h1>Welcome to the Blog App</h1>
    </div>

<% end %>